<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:alignmentMode="alignBounds"
    tools:ignore="UseCompoundDrawables"
    tools:context=".ui.MoreFragment">

    <LinearLayout
        android:id="@+id/more_open_playlist"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/shape_grid_layout_cell_border"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/playlist"
            android:src="@drawable/ic_playlist_24dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:text="@string/playlist"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_open_favorites"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/shape_grid_layout_cell_border"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/favorites"
            android:src="@drawable/ic_favorite_24dp" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:text="@string/favorites"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_open_watch_later"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/shape_grid_layout_cell_border"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/watch_later"
            android:src="@drawable/ic_watch_later_24dp" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:text="@string/watch_later"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_open_settings"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:background="@drawable/shape_grid_layout_cell_border"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/settings"
            android:src="@drawable/ic_settings_24dp" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:text="@string/settings"/>

    </LinearLayout>
</GridLayout>