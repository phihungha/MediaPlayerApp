<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ui.playlist.playlist_details.PlaylistDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_background"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/shape_playlist_details_header_background"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_thumbnailMediaQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_background"
            app:layout_constraintStart_toStartOf="@id/view_background"
            app:layout_constraintTop_toTopOf="@id/view_background">

            <ImageView
                android:id="@+id/img_thumbnailPlaylistDetails"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/image_for_thumbnail"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_play_video_24dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_playlistDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view_background"
            app:layout_constraintStart_toEndOf="@id/cardView_thumbnailMediaQueue"
            app:layout_constraintTop_toTopOf="@id/view_background" />

        <TextView
            android:id="@+id/tv_playlistDetailsNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/cardView_thumbnailMediaQueue"
            app:layout_constraintTop_toBottomOf="@+id/tv_playlistDetailsName" />

        <ImageView
            android:id="@+id/btn_addMore"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:background="?attr/selectableItemBackground"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:src="@drawable/ic_add_circle_outline_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_background"
            app:layout_constraintEnd_toEndOf="@id/view_background"
            app:layout_constraintTop_toTopOf="@+id/view_background"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/add_more"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/view_background"
            app:layout_constraintTop_toBottomOf="@id/btn_addMore" />

        <LinearLayout
            android:id="@+id/layout_playAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/layout_shuffleAll"
            app:layout_constraintStart_toStartOf="@id/view_background"
            app:layout_constraintTop_toBottomOf="@id/view_background">

            <ImageView
                android:id="@+id/img_playAll"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:src="@drawable/ic_play_circle_outline_24dp" />

            <TextView
                android:id="@+id/tv_playAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/play_all"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_shuffleAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/layout_playAll"
            app:layout_constraintEnd_toEndOf="@id/view_background"
            app:layout_constraintStart_toEndOf="@id/layout_playAll"
            app:layout_constraintTop_toTopOf="@id/layout_playAll">

            <ImageView
                android:id="@+id/img_shuffleAll"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                android:src="@drawable/ic_shuffle_24dp" />

            <TextView
                android:id="@+id/tv_shuffleAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="@string/shuffle_all"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_playlistsDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="true"
         />
</LinearLayout>