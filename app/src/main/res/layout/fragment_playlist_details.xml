<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.playlist.PlaylistDetailsFragment">

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp"

        android:background="@drawable/background_gradient_playlist_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_thumbnailPlaylistDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"

        app:layout_constraintBottom_toBottomOf="@+id/view_background"
        app:layout_constraintStart_toStartOf="@id/view_background"

        app:layout_constraintTop_toTopOf="@id/view_background">

        <ImageView
            android:id="@+id/img_thumbnailPlaylistDetails"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/image_for_thumbnail"

            android:scaleType="centerCrop"
            android:src="@drawable/img_for_test" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_playlistDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_thin"
        android:text="@string/app_name"

        android:textColor="@color/colorPlaylist_textColor"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/view_background"
        app:layout_constraintStart_toEndOf="@id/cardView_thumbnailPlaylistDetails"
        app:layout_constraintTop_toTopOf="@id/view_background" />

    <TextView
        android:id="@+id/tv_playlistDetailsNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_thin"
        android:text="@string/app_name"

        android:layout_marginStart="20dp"
        android:textColor="@color/colorPlaylist_textColor"
        android:textSize="14sp"

        app:layout_constraintStart_toEndOf="@+id/cardView_thumbnailPlaylistDetails"
        app:layout_constraintTop_toBottomOf="@+id/tv_playlistDetailsName" />

    <ImageView
        android:id="@+id/btn_addMore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_baseline_add_circle_outline_24"
        android:backgroundTint="@color/white"

        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_background"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        app:layout_constraintTop_toTopOf="@+id/view_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/add_more"
        android:textSize="14sp"
        android:textColor="@color/white"

        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_addMore"
        app:layout_constraintEnd_toEndOf="@id/view_background"
        />

    <LinearLayout
        android:id="@+id/layout_playAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/view_background"
        app:layout_constraintTop_toBottomOf="@id/view_background"
        >
        <ImageView
            android:id="@+id/img_playAll"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@drawable/ic_baseline_play_circle_outline_24"
            android:backgroundTint="@color/black"

            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_playAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/poppins_thin"
            android:text="@string/play_all"

            android:textColor="@color/colorPlaylist_textColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="center"

            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_shuffleAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/layout_playAll"
        app:layout_constraintBottom_toBottomOf="@id/layout_playAll"
        app:layout_constraintStart_toEndOf="@id/layout_playAll"
        >
    <ImageView
        android:id="@+id/img_shuffleAll"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:backgroundTint="@color/black"
        android:src="@drawable/ic_shuffle_all"

        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/tv_shuffleAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/poppins_thin"
        android:text="@string/shuffle_all"

        android:textColor="@color/colorPlaylist_textColor"
        android:textSize="16sp"
        android:textStyle="bold"

        android:layout_gravity="center"
        android:layout_marginStart="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_idPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="List song - Playlist details"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/layout_playAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>