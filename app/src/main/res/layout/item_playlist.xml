<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:id="@+id/layoutItem_playlist"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="@string/image_for_thumbnail"

            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_playlistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_thin"
        android:text="@string/app_name"

        android:textColor="@color/colorPlaylist_textColor"
        android:textSize="22sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_playlistNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_thin"
        android:text="@string/app_name"

        android:textColor="@color/colorPlaylist_textColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cardView_thumbnail"

        app:layout_constraintTop_toBottomOf="@id/tv_playlistName" />


    <ImageView
        android:id="@+id/img_navigateNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/navigate_next"

        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_round_navigate_next_24"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>