<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MusicControlBtn">
        <item name="android:background">@null</item>
        <item name="android:tint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="BottomPlayerMusicControlBtn" parent="MusicControlBtn">
        <item name="android:tint">@null</item>
    </style>

    <style name="ImageViewRoundedCorner">
        <item name="cornerSize">7dp</item>
    </style>

    <style name="HorizontalAutoScrollTextView">
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="roundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>